<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    tools:context=".screens.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/factViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/category_btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"


        android:background="@drawable/rounded_button"
        android:contentDescription="Categories"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_button_category"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/theme_btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"

        android:layout_marginStart="24dp"

        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="Theme"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        android:src="@drawable/ic_button_palette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"

        android:layout_marginStart="171dp"
        android:layout_marginEnd="171dp"

        android:background="@drawable/rounded_button"
        android:contentDescription="Favorite"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_button_heart_outlined"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settings_btn"
        app:layout_constraintStart_toEndOf="@+id/theme_btn" />

    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="Settigns"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_button_settings"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>